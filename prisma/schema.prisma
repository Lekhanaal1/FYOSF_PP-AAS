// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          String    @default("VIEWER") // ADMIN, EDITOR, VIEWER
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  reports       Report[]
  notifications Notification[]
}

// SQLite doesn't support enums, using String instead
// UserRole: ADMIN, EDITOR, VIEWER

model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  userId    String
  expires   DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Report {
  id              String   @id @default(cuid())
  title           String
  executiveSummary String
  background     String
  evidence       String
  // PP-AAS Specific Sections
  problemStatement String?
  ageTokens      String?  // AgeToken system details
  dutyOfCare     String?  // Federal baseline duty-of-care
  stateModules   String?  // Interoperable State Modules
  privacyImplementation String?  // Privacy-preserving details
  antiFalseSecurity String?  // Anti-false-security design
  equityArchitecture String?  // Equity-driven architecture
  securityModel  String?  // STRIDE threat model
  governance     String?  // NIST + FTC + NTIA governance
  kpis           String?  // Key metrics & evaluation
  status         String       @default("DRAFT") // DRAFT, PUBLISHED, ARCHIVED
  authorId       String
  author         User     @relation(fields: [authorId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  versions       ReportVersion[]
}

// SQLite doesn't support enums, using String instead
// ReportStatus: DRAFT, PUBLISHED, ARCHIVED

model ReportVersion {
  id        String   @id @default(cuid())
  reportId String
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  content   String
  version   Int
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message   String
  type      String // INFO, WARNING, SUCCESS, ERROR
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// SQLite doesn't support enums, using String instead
// NotificationType: INFO, WARNING, SUCCESS, ERROR

